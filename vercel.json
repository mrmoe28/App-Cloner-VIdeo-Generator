{
  "version": 2,
  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/advanced-video-creator",
      "destination": "/advanced_video_creator.html"
    },
    {
      "source": "/video-generator", 
      "destination": "/video_generator.html"
    },
    {
      "source": "/video-demo",
      "destination": "/video_demo.html"
    },
    {
      "source": "/ai-video-studio",
      "destination": "/ai-video-studio.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}