{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/advanced-video-creator",
      "dest": "/public/advanced_video_creator.html"
    },
    {
      "src": "/video-generator", 
      "dest": "/public/video_generator.html"
    },
    {
      "src": "/video-demo",
      "dest": "/public/video_demo.html"
    },
    {
      "src": "/ai-video-studio",
      "dest": "/public/ai-video-studio.html"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|mp4|webm|avi))",
      "dest": "/public/$1"
    }
  ]
}