{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/advanced-video-creator",
      "dest": "/advanced_video_creator.html"
    },
    {
      "src": "/video-generator", 
      "dest": "/video_generator.html"
    },
    {
      "src": "/video-demo",
      "dest": "/video_demo.html"
    },
    {
      "src": "/ai-video-studio",
      "dest": "/ai-video-studio.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ]
}