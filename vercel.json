{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/advanced-video-creator",
      "destination": "/advanced_video_creator.html"
    },
    {
      "source": "/video-generator", 
      "destination": "/video_generator.html"
    },
    {
      "source": "/video-demo",
      "destination": "/video_demo.html"
    },
    {
      "source": "/ai-video-studio",
      "destination": "/ai-video-studio.html"
    },
    {
      "source": "/",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}